@model SalesProject.VM.LoginViewModel

@{
    ViewData["Title"] = "Login";
}


<div class="login-page bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-10 offset-lg-1">
                <h3 class="mb-3 text-center">تسجيل الدخول</h3>
                <div class="bg-white shadow rounded">
                    <div class="row">
                        <div class="col-md-7 pe-0">
                            <div class="form-left h-100 py-5 px-5">
                                <form asp-action="Login" class="row g-4">
                                    <div class="col-12">
                                        <label asp-for="Email"> البريد الإلكتروني <span class="text-danger">*</span></label>
                                        <div class="input-group">
                                            <div class="input-group-text"><i class="bi bi-person-fill"></i></div>
                                            <input asp-for="Email" class="form-control" placeholder="أدخل البريد الإلكتروني" />
                                        </div>
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>

                                    <div class="col-12">
                                        <label asp-for="Password"> كلمه السر <span class="text-danger">*</span></label>                                       
                                        <div class="input-group">
                                            <div class="input-group-text"><i class="bi bi-lock-fill"></i></div>
                                            <input asp-for="Password" class="form-control" placeholder="أدخل كلمه السر" />
                                        </div>
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>

                                    <div class="col-sm-6">
                                        <div class="form-check">
                                            <input asp-for="RememberMe" class="form-check-input" />
                                            <label asp-for="RememberMe" class="form-check-label"></label>
                                        </div>
                                    </div>

                                    <div class="col-sm-6">
                                        <a href="#" class="float-end text-primary">نسيت كلمه السر؟</a>
                                    </div>

                                    <div class="col-12">
                                        <button type="submit" class="btn btn-primary px-4 float-end mt-4">تسجيل الدخول</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="col-md-5 ps-0 d-none d-md-block">
                            <div class="form-right h-100 bg-primary text-white text-center pt-5">
                                <i class="bi bi-bootstrap"></i>
                                <h2 class="fs-1">مرحبا مجددا</h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




